<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(patient) -%>">
  <span class='title'>
    <%= patient.firstname %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), patient_path(patient),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_patient_path(patient),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_patient_path(patient),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => patient.firstname),
        :method => :delete %>
  </span>
</li>
